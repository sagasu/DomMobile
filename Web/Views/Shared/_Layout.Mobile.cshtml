@using Trader.Web.Global

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />

        @* For mobile display Viewport meta - tries to fit a screen (zooms to a full page) *@
        <meta name="viewport" content="width=device-width, initial-scale=1"> 

        @* For google bot *@
        <meta name="googlebot" content="noindex,follow">
        <meta name="googlebot-mobile" content="index,follow">

        <title>@ViewBag.Title</title>

        <link href="@Url.Content("~/Content/jquery.mobile-1.0.1.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/jquery.mobile.structure-1.0.1.css")" rel="stylesheet" type="text/css" />
    
        <link href="@Url.Content("~/Content/jquery.mobile.custom-1.0.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/jquery.mobile.structure.custom-1.0.css")" rel="stylesheet" type="text/css" />

        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/Style.css")" rel="stylesheet" type="text/css" />
	
        <!--[if lte IE 8]>
            <link href="@Url.Content("~/Content/style-ie7.css")" rel="stylesheet" type="text/css" />
        <![endif]-->

        <!--[if gte IE 8]>
            <link href="@Url.Content("~/Content/style-ie8.css")" rel="stylesheet" type="text/css" />
        <![endif]-->

        @if (HttpContext.Current.IsDebuggingEnabled)
        {
            // Debug - full version of scripts
            <script src="@Url.Content("~/Scripts/jquery-1.6.4.js")" type="text/javascript"></script>
        }
        else
        {
            // Release - minified version of scripts
            <script src="@Url.Content("~/Scripts/jquery-1.6.4.min.js")" type="text/javascript"></script>
        }

        <script src="@Url.Content("~/Scripts/jquery-ui-1.8.16.min.js")" type="text/javascript"></script>

        <!--[if lt IE 9]>
            <script src="@Url.Content("~/Scripts/html5.js")" type="text/javascript"></script>
        <![endif]-->


        <script type="text/javascript">
            var trader = {};

                @*  // if you modify this configuration app will be unstable when someone hits browser back button.
        // configuration of JQueryMobile must be before a library call
     *@
            $(document).bind("mobileinit", function(){
                $.extend($.mobile, {
                    ajaxEnabled: false,
                    hashListeningEnabled: false
                });
            });
        </script>

        <script src="@Url.Content("~/Scripts/jquery.mobile-1.0.1.min.js")" type="text/javascript"></script>

        @Html.Partial(MVC.Shared.Views.Google.GoogleAnalyticsJavascriptVersion)

        @Html.Partial(MVC.Shared.Views.AdServer.AdServerHead)
    </head>

    <body id="@Consts.JavascriptIds.MainBodyId" class="mainBody @ViewBag.AdditionalMainBodyCss">
        @Html.Partial(MVC.Shared.Views.JavaScriptInlineCode.FormatInt)

        <img alt="" width="1" height="1" src="http://trader.hit.gemius.pl/redot.gif?id=1vObkCOfpIkOXlLsNJnOOqRtXqwi6qM1a2ZJC7UsI2n.V7&ts=2012030714195256" />

        <div class="page" data-role="page">
            @RenderSection("HeaderAdvertisement", false)
            <header data-role="header" class="mainHeader">
                @RenderSection("HeaderSection", false)
            </header>
            <section id="@Consts.JavascriptIds.MainContentId" data-role="content" class="mainBody">
                <div id="@Consts.JavascriptIds.Message"></div>
                @RenderBody()
            </section>

            <footer data-role="footer" class="mainFooter">
                @RenderSection("FooterSection", false)
            </footer>
        </div>


        @if (HttpContext.Current.IsDebuggingEnabled)
        {
            // Debug - full version of scripts
            <script src="@Url.Content("~/Scripts/jquery.mobile.message.js")" type="text/javascript"></script>
        }
        else
        {
            // Release - minified version of scripts
            <script src="@Url.Content("~/Scripts/jquery.mobile.message.min.js")" type="text/javascript"></script>
        }
    
    
        <script type="text/javascript" src="@Url.Content("~/Scripts/mapa2.js")"></script>

        @Html.Partial(MVC.Shared.Views.ErrorHandler)

        @Html.Partial(MVC.Shared.Views.AdServer.AdServerBody)
    </body>

</html>
