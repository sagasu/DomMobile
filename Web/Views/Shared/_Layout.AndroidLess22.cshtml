@using Trader.Web.Global

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />

@* For mobile display Viewport meta - tries to fit a screen (zooms to a full page) *@
<meta name="viewport" content="width=device-width, initial-scale=1"> 

@* For google bot *@
<meta name="googlebot" content="noindex,follow">
<meta name="googlebot-mobile" content="index,follow">

<title>@ViewBag.Title</title>

<link href="@Url.Content("~/Content/weakmobile.css")" rel="stylesheet" type="text/css" />

@if (HttpContext.Current.IsDebuggingEnabled)
{
    // Debug - full version of scripts
    <script src="@Url.Content("~/Scripts/jquery-1.6.4.js")" type="text/javascript"></script>
}
else
{
    // Release - minified version of scripts
    <script src="@Url.Content("~/Scripts/jquery-1.6.4.min.js")" type="text/javascript"></script>
}


<script src="@Url.Content("~/Scripts/jquery-ui-1.8.16.min.js")" type="text/javascript"></script>
@*
@Html.Partial(MVC.Shared.Views.Google.GoogleAnalyticsJavascriptVersion)
*@
</head>
<body id="@Consts.JavascriptIds.MainBodyId" class="mainBody @ViewBag.AdditionalMainBodyCss">
    @Html.Partial(MVC.Shared.Views.JavaScriptInlineCode.FormatInt)
    <img alt="" width="1" height="1" src="http://trader.hit.gemius.pl/redot.gif?id=1vObkCOfpIkOXlLsNJnOOqRtXqwi6qM1a2ZJC7UsI2n.V7&ts=2012030714195256" />

    <div class="page" data-role="page">
        <header data-role="header" class="mainHeader">
            @RenderSection("HeaderSection", false)
        </header>
        <section id="@Consts.JavascriptIds.MainContentId" data-role="content" class="mainBody">
            <div id="@Consts.JavascriptIds.Message"></div>
            @RenderBody()
        </section>

        <footer data-role="footer" class="mainFooter">
            @RenderSection("FooterSection", false)
        </footer>
    </div>

    @Html.Partial(MVC.Shared.Views.ErrorHandler)
    
</body>
</html>
